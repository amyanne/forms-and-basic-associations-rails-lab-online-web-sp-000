<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%# f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre %>
  <%= collection_select(:song, :genre_id, Genre.all, :id, :name) %>
  <br />

  <p>
  <%=f.fields_for :note, song.build_note do |n| %>
    <%= n.text_field :content %>
  <% end %>

  <%= f.submit %>
<% end %>
